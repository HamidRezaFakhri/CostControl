@model CostControl.API.Models.ServiceResponse<CostControl.BusinessEntity.Models.CostControl.IntakeRemittance>

@{
	Layout = null;
	var addTitle = Helper.GetEntityTitle<CostControl.BusinessEntity.Models.CostControl.IntakeRemittance>(EnumTitle.Add);
	var editTitle = Helper.GetEntityTitle<CostControl.BusinessEntity.Models.CostControl.IntakeRemittance>(EnumTitle.Edit);
	var deleteTitle = Helper.GetEntityTitle<CostControl.BusinessEntity.Models.CostControl.IntakeRemittance>(EnumTitle.Delete);
	var detailsTitle = Helper.GetEntityTitle<CostControl.BusinessEntity.Models.CostControl.IntakeRemittanceItem>(EnumTitle.Details);
}

<div class="row well">
	<div class="col-md-6">
		<div class="btn-group" data-toggle="modal">
			<a id="btnAddIntakeRemittance" href="#" class="btn btn-primary"
			   onclick='createEntityModal("IntakeRemittance/AddIntakeRemittance", "@addTitle")'>
				<span class="fa fa-plus"> <i> جدید</i></span>
			</a>

		</div>
	</div>
</div>

<table id="IntakeRemittanceslist" class="table table-bordered table-striped table-hover">
	<thead>
		<tr>
			<th>شناسه</th>
			<th>شروع</th>
			<th>پایان</th>
			<th></th>
		</tr>
	</thead>
	<tbody id="setIntakeRemittanceList">
		@foreach (CostControl.BusinessEntity.Models.CostControl.IntakeRemittance item in Model.data)
		{
			<tr id="tr_@item.Id">
				<td>@item.Id</td>
				<td id="td_FromDate">@item.IntakeFromDate.ConverToPersian()</td>
				<td id="td_ToDate">@item.IntakeToDate.ConverToPersian()</td>
				<td>
					@if (!item.IsConfirmed)
					{
						<a href="#" class="btn btn-sm btn-warning"
						   onclick="EditEntityModal(@item.Id, 'IntakeRemittance/EditIntakeRemittance/', '@editTitle (@item.Id @item.IntakeFromDate.ConverToPersian())')">
							<i class="fa fa-edit"><span> ویرایش </span></i>
						</a>

						<span> | </span>
						<span class="btn btn-sm btn-outline-dark"
							  onclick="EditEntityModal(@item.Id, 'IntakeRemittance/DetailIntakeRemittance/', '@detailsTitle', '@item.Id @item.IntakeFromDate.ConverToPersian()')">
							<i class="fa fa-info-circle"><span> جزئیات </span></i>
						</span>

						<span class="ui-slider-vertical"> | </span>
						<span class="btn btn-sm btn-danger"
							  onclick="DeleteEntityModal(@item.Id, 'IntakeRemittance/DeleteIntakeRemittance/', '@deleteTitle', '@item.Id @item.IntakeFromDate.ConverToPersian()')">
							<i class="fa fa-trash"><span> حذف </span></i>
						</span>

						<span> | </span>
						<span class="btn btn-sm btn-success">
							<i class="fa fa-hand-o-up"><span> افزودن دستی </span></i>
						</span>

						<span> | </span>
						<span class="btn btn-sm btn-primary"
							  onclick="DeleteEntityModal(@item.Id, 'IntakeRemittance/ConfirmIntakeRemittance/', '@editTitle', '@item.Id')">
							<i class="fa fa-check"><span> تائید </span></i>
						</span>
					}
				</td>
			</tr>
		}
	</tbody>
</table>

<script>
	$(document).ready(function () {
		$('#pageTitle').html('@ViewData["title"]');
		$('#IntakeRemittanceslist').dataTable({
			"language": {
				"url": "/lib/DataTables/i18n/Persian.lang.json"
			}
		});
	});
</script>