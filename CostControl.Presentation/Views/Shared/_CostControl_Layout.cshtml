<!DOCTYPE html>

<html dir="rtl">
<head>
	<meta name="viewport" content="width=device-width" />

	<title>نرم افزار مدیریت هزینه</title>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Main CSS-->
	<link rel="stylesheet" type="text/css" href="~/css/main.css">
	<!-- Font-icon css-->
	@*
	<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">*@

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-rtl.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/font-awesome.min.css" />
	@*
	<link rel="stylesheet" href="~/css/preloader.css" />
	<link rel="stylesheet" href="~/css/site.css" />*@
	<link rel="stylesheet" href="~/css/style.css" />

	<link href="~/lib/DataTables/css/jquery.dataTables.css" rel="stylesheet" />
	<link href="~/lib/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />

	<link href="~/lib/PersianCalendar/css/PersianDatePicker.css" rel="stylesheet" />

</head>
<body class="app sidebar-mini rtl">
	<!-- Navbar-->
	<header class="app-header">
		<a asp-controller="Home" asp-action="Index" class="app-header__logo">Cost Control</a>

		<!-- Sidebar toggle button--><a class="app-sidebar__toggle" href="#" data-toggle="sidebar" aria-label="Hide Sidebar"></a>
		<!-- Navbar Right Menu-->
		<ul class="app-nav">
			<!-- User Menu-->
			<li class="dropdown">
				<a class="app-nav__item" href="#" data-toggle="dropdown" aria-label="Open Profile Menu"><i class="fa fa-user fa-lg"></i></a>
				<ul class="dropdown-menu settings-menu dropdown-menu-right">
					<li><a class="dropdown-item" href="#"><i class="fa fa-cog fa-lg"></i> تنظیمات</a></li>
					<li><a class="dropdown-item" href="#"><i class="fa fa-user fa-lg"></i> پروفایل</a></li>
					@*
						<li><a class="dropdown-item" href="page-login.html"><i class="fa fa-sign-out fa-lg"></i>خروج</a></li>*@
					<li><a asp-controller="IncommingUser" asp-action="Logout" class="dropdown-item">خروج<i class="fa fa-sign-out fa-lg"></i></a></li>
				</ul>
			</li>
		</ul>
	</header>
	<!-- Sidebar menu-->
	<div class="app-sidebar__overlay" data-toggle="sidebar"></div>
	<aside class="app-sidebar">
		<div class="app-sidebar__user">
			<img class="app-sidebar__user-avatar" src="https://s3.amazonaws.com/uifaces/faces/twitter/jsa/48.jpg" alt="User Image">
			<div>
				<p class="app-sidebar__user-name">Admin</p>
				<p class="app-sidebar__user-designation">مدیر سیستم</p>
			</div>
		</div>
		<ul class="app-menu">
			<li>
				<a class="app-menu__item active" asp-controller="Home" asp-action="Index">
					<i class="app-menu__icon fa fa-dashboard"></i>
					<span class="app-menu__label">داشبورد</span>
				</a>
			</li>
			<li class="treeview">
				<a class="app-menu__item" href="#" data-toggle="treeview">
					<i class="app-menu__icon fa fa-bank"></i>
					<span class="app-menu__label">اطلاعات پایه</span>
					<i class="treeview-indicator fa fa-angle-left"></i>
				</a>
				<ul class="treeview-menu">
					<li><a id="SalePoint" class="treeview-item" href="#"><i class="icon fa fa-laptop"></i>مرکز فروش</a></li>
					@*<li><a id="CostPointGroup" class="treeview-item" href="#"><i class="icon fa fa-laptop"></i>گروه مرکز هزینه</a></li>*@
					<li><a id="CostPoint" class="treeview-item" href="#"><i class="icon fa fa-laptop"></i>مرکز هزینه</a></li>
					<li><a id="SaleCostPoint" class="treeview-item" href="#"><i class="icon fa fa-laptop"></i>مرکز هزینه - مرکز فروش</a></li>
					<li><a id="OverCostType" class="treeview-item" href="#"><i class="icon fa fa-laptop"></i>سرفصل هزینه های سربار</a></li>
					@*
						<li><a id="ConsumptionUnit" class="treeview-item" href="#"><i class="icon fa fa-laptop"></i>واحد های مصرفی</a></li>*@
					<li><a id="Ingredient" class="treeview-item" href="#"><i class="icon fa fa-laptop"></i>مواد خام</a></li>
					@*
						<li><a id="Menu" class="treeview-item" href="#"><i class="icon fa fa-laptop"></i>منو</a></li>*@
					@*
						<li><a id="Inventory" class="treeview-item" href="#"><i class="icon fa fa-laptop"></i>انبار</a></li>*@
					@*
						<li><a id="Draft" class="treeview-item" href="#"><i class="icon fa fa-laptop"></i>حواله انبار</a></li>*@
					@*
						<li><a id="Setting" class="treeview-item" href="#"><i class="icon fa fa-laptop"></i>تنظیمات</a></li>*@
				</ul>
			</li>
			<li class="treeview">
				<a class="app-menu__item" href="#" data-toggle="treeview">
					<i class="app-menu__icon fa fa-bell"></i>
					<span class="app-menu__label">عملیات</span>
					<i class="treeview-indicator fa fa-angle-left"></i>
				</a>
				<ul class="treeview-menu">
					<li><a id="Food" class="treeview-item" href="#"><i class="icon fa fa-laptop"></i>دستور غذا</a></li>
					<li><a id="OverCost" class="treeview-item" href="#"><i class="icon fa fa-laptop"></i>هزینه های سربار دوره</a></li>
					<li><a id="IntakeRemittance" class="treeview-item" href="#"><i class="icon fa fa-laptop"></i>حواله مصرفی</a></li>
				</ul>
			</li>
			<li class="treeview">
				<a class="app-menu__item" href="#" data-toggle="treeview">
					<i class="app-menu__icon fa fa-pie-chart"></i>
					<span class="app-menu__label">گزارشات</span>
					<i class="treeview-indicator fa fa-angle-left"></i>
				</a>
				<ul class="treeview-menu">
					<li><a class="treeview-item" href="form-components.html"><i class="icon fa fa-pie-chart"></i> مصارف عمده</a></li>
					<li><a class="treeview-item" href="form-custom.html"><i class="icon fa fa-pie-chart"></i> فروش رستوران</a></li>
					<li><a class="treeview-item" href="form-samples.html"><i class="icon fa fa-pie-chart"></i> Net Cost</a></li>
				</ul>
			</li>
		</ul>
	</aside>

	<main class="app-content">
		<div class="app-title">
			<div class="row">
				<h1 id="pageIcon"><i class="fa fa-th-list"></i></h1>
				<h1 id="pageTitle">@ViewData["title"]</h1>
				@*<p>Table to display analytical data effectively</p>*@
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="tile">
					<div class="tile-body">
						@RenderBody()
					</div>
				</div>
			</div>
		</div>
	</main>

	<!-- Essential javascripts for application to work-->
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/js/popper.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
	<script src="~/js/main.js"></script>
	<!-- The javascript plugin to display page loading on top-->
	<script src="~/js/plugins/pace.min.js"></script>
	<!-- Page specific javascripts-->
	<script type="text/javascript" src="~/js/plugins/chart.js"></script>

	<script src="~/lib/DataTables/js/jquery.dataTables.js"></script>
	<script src="~/lib/DataTables/js/dataTables.bootstrap4.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
	<script src="~/lib/PersianCalendar/js/PersianDatePicker.js"></script>
	<script src="~/lib/jquery-mask-plugin/jquery.mask.js"></script>

	<script src="~/lib/bootstrap-select/chosen.jquery.js"></script>
	<script src="~/lib/bootstrap-select/chosen.proto.js"></script>

	@RenderSection("Scripts", required: false)
</body>
</html>
