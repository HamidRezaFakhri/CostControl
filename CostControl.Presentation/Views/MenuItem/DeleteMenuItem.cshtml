@model CostControl.BusinessEntity.Models.CostControl.MenuItem
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("DeleteMenuItem", "MenuItem", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return SubmitForm(this)" }))
{
	@Html.AntiForgeryToken()

	<div>
		<div>
			<h3>آیا اطمینان در حذف دارید؟</h3>
		</div>

		<br />

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="حذف" class="btn btn-danger" />
				<input id="btnCancel" type="button" class="btn btn-default" data-dismiss="modal" value="انصراف" />
			</div>
		</div>
	</div>
}

@section Scripts{
	<script>
		function SubmitForm(form) {
			$.ajax({
				type: "POST",
				url: form.action,
				data: $(form).serialize(),
				success: function (data) {
					if (data.success) {
						$('body').removeClass('modal-open');
						$('.modal-backdrop').remove();
						$('#apModal').hide();
						getData('MenuItemList', 'MenuItem');
					} else {
						return false;
					}
				}
			});

			return false;
		}
	</script>
}