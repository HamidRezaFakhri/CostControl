@model CostControl.BusinessEntity.Models.CostControl.Recipe
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	var error = string.Empty;

	var parentId = Model.FoodId;
}

@using (Html.BeginForm("AddRecipe", "Recipe", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return SubmitForm(this)" }))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal row">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		@Html.HiddenFor(model => model.FoodId)

		<div class="form-group col col-md-5">
			<div class="form-group">
				@Html.LabelFor(model => model.IngredientId, htmlAttributes: new { @class = "control-label col-md-12" })
				<div class="col-md-10">
					@Html.DropDownListFor(model => model.IngredientId, ViewBag.Ingredients as IEnumerable<SelectListItem>,
				 "انتخاب کنید ...", htmlAttributes: new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.IngredientId, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>

		<div class="form-group col col-md-4">
			<div class="form-group">
				@Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-12" })
				<div class="col-md-12">
					@Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
		<div id="errorContent" class="text-danger">

		</div>
		<div class="form-group col col-md-3">
			<div class="form-group">
				<br />
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="ثبت" class="btn btn-success" />
				</div>
			</div>
		</div>
	</div>

	<div id="ingredientList">

	</div>
}

@section Scripts{
	<script>
		$(document).ready(function () {
			$('#ingredientList').load('@Url.Action("RecipeList", "Recipe", new {id = Model.FoodId, param="" })');
		});

		function displayErrorMessage(error) {
			$("#errorContent").html(error);
		}

		function SubmitForm(form) {
			$.ajax({
				type: "POST",
				url: form.action,
				data: $(form).serialize(),
				success: function (data) {
					refreshList();
					
					if (data.success) {

						return false;
					} else {
						displayErrorMessage(data.message);
						return false;
					}
				}
			});

			refreshList();

			return false;
		}

		function refreshList() {
			$('#ingredientList').load('@Url.Action("RecipeList", "Recipe", new {id = Model.FoodId, param="" })');
		}
	</script>
}
