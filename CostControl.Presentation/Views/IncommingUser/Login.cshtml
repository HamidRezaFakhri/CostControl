@model string;

@{
	Layout = null;
}

<!DOCTYPE html>
<html dir="rtl">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Main CSS-->
	<link rel="stylesheet" type="text/css" href="~/css/main.css">
	<!-- Font-icon css-->
	@*<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">*@
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/font-awesome.min.css" />
	<title>ورود - مدیریت هزینه</title>
</head>
<body>
	<section class="material-half-bg">
		<div class="cover"></div>
	</section>
	<section class="login-content">
		<div class="logo">
			<h1>Cost Control</h1>
		</div>
		<div class="login-box">
			<form method="post" asp-controller="IncommingUser" asp-action="Login" class="login-form">
				@*<form method="post" class="login-form" action="index.html">*@
				<h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>اهراز هویت</h3>

				@if (!string.IsNullOrEmpty(Model))
				{
					<div class="container alert alert-danger">
						@Model
					</div>
				}

				<div class="form-group">
					<label for="userName" class="control-label">نام کاربری</label>
					<input class="form-control" type="text" placeholder="نام کاربری خود را وارد نمائید" name="userName" required autofocus>
				</div>

				<div class="form-group">
					<label for="pass" class="control-label">گذرواژه</label>
					<input class="form-control" type="password" placeholder="رمز عبور خود را وارد نمائید" name="pass" required>
				</div>
				
				<div class="form-group">
					<div class="utility">
						<div class="animated-checkbox">
							<label>
								<input type="checkbox"><span class="label-text">مرا بخاطر بسپار</span>
							</label>
						</div>
						<p class="semibold-text mb-2"><a href="#" data-toggle="flip">فراموشی گذرواژه؟</a></p>
					</div>
				</div>
				<div class="form-group btn-container">
					<button type="submit" class="btn btn-primary btn-block"><i class="fa fa-sign-in fa-lg fa-fw"></i>ورود</button>
				</div>
			</form>
			<form class="forget-form" action="index.html">
				<h3 class="login-head"><i class="fa fa-lg fa-fw fa-lock"></i>فراموشی گذرواژه؟</h3>
				<div class="form-group">
					<label class="control-label">ایمیل</label>
					<input class="form-control" type="text" placeholder="Email">
				</div>
				<div class="form-group btn-container">
					<button class="btn btn-primary btn-block"><i class="fa fa-unlock fa-lg fa-fw"></i>بازنشانی</button>
				</div>
				<div class="form-group mt-3">
					<p class="semibold-text mb-0"><a href="#" data-toggle="flip"><i class="fa fa-angle-left fa-fw"></i> بازگشت به صفحه ورود</a></p>
				</div>
			</form>
		</div>
	</section>
	<!-- Essential javascripts for application to work-->
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/js/popper.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
	<script src="~/js/main.js"></script>
	<!-- The javascript plugin to display page loading on top-->
	<script src="~/js/plugins/pace.min.js"></script>
	<script type="text/javascript">
		// Login Page Flipbox control
		$('.login-content [data-toggle="flip"]').click(function () {
			$('.login-box').toggleClass('flipped');
			return false;
		});
	</script>
</body>
</html>
